<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="divineintinity.tokka">

    <!-- Permissions needed for the application -->
    <!-- permission for the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- permission for the vibrate motor to notify user -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- permission to check network state for MAPS and GPS -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- permission to get the GPS location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.goo.android.maps.v2.API_KEY"
            android:value="AIzaSyDNOZXyDztGGeSaJvPHGGRpTxVR0Oj27U0" />

        <activity
            android:name=".alarmCreate"
            android:label="@string/title_activity_alarm_create"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="divineintinity.tokka.MainActivity" />
        </activity>
    </application>

</manifest>